<?xml version="1.0" encoding="utf-8"?>
 <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vvieira.appauthenticator.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment" />
        <action
            android:id="@+id/action_loginFragment_to_acceptTermsFragment"
            app:destination="@id/acceptTermsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.vvieira.appauthenticator.ui.register.RegisterFragment"
        android:label="CadastroFragment"
        tools:layout="@layout/fragment_cadastro">
        <action
            android:id="@+id/action_cadastroFragment_to_acceptTermsFragment"
            app:destination="@id/acceptTermsFragment" />
    </fragment>

    <fragment
        android:id="@+id/acceptTermsFragment"
        android:name="com.vvieira.appauthenticator.ui.AcceptTermsFragment"
        android:label="AcceptTermsFragment"
        tools:layout="@layout/fragment_accept_terms">
        <action
            android:id="@+id/action_acceptTermsFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.vvieira.appauthenticator.ui.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
    </fragment>
</navigation>